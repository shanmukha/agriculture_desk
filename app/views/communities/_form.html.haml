= form_for @community do |f|
  - if @community.errors.any?
    #error_explanation
      %h2= "#{pluralize(@community.errors.count, "error")} prohibited this community from being saved:"
      %ul
        - @community.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :community_type
    = f.text_field :community_type
  .field
    = f.label :status
    = f.check_box :status
  .field
    = f.label :area
    = f.text_field :area
  .field
    = f.label :community_level
    = f.text_field :community_level
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :code
    = f.text_field :code
  .actions
    = f.submit 'Save'
