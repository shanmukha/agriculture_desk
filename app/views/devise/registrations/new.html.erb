<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
   <%= devise_error_messages! %>
    <div><%= f.label :username %><br />
    <%= f.text_field :username, :autofocus => true %></div>
    <div><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true %></div>
    <div><%= f.label :first_name,'First Name' %><br />
    <%= f.text_field :first_name %></div> 
    <div><%= f.label :last_name,'Last Name' %><br />
    <%= f.text_field :last_name %></div> 
    <div><%= f.label :date_of_birth,'Date of birth' %><br />
    <%= f.date_select :date_of_birth %></div> 
    <div><%= f.label :mobile,'Mobile Number' %><br />
    <%= f.text_field :mobile %></div>
    <div><%= f.label :landline,'Landline Number' %><br />
    <%= f.text_field :landline %></div> 
    <div><%= f.label :address,'Address' %><br />
    <%= f.text_field :address %></div> 
    <div><%= f.label :country_id,'Country' %><br />
    <%= f.select :country_id,[1,2] %></div> 
    <div><%= f.label :state_id,'State' %><br />
    <%= f.select :state_id,[1,2] %></div>
    <div><%= f.label :other_state,'Other State' %><br />
    <%= f.text_field :other_state%></div>
    <div><%= f.label :city,'City' %><br />
    <%= f.text_field :city%></div>
    <div><%= f.label :district,'District' %><br />
    <%= f.text_field :district%></div>
    <div><%= f.label :taluk,'Taluk' %><br />
    <%= f.text_field :taluk%></div>
    <div><%= f.label :village_or_area,'Village/Area' %><br />
    <%= f.text_field :village_or_area%></div>
    <div><%= f.label :zip_code,'Zip Code' %><br />
    <%= f.text_field :zip_code%></div>
    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>
    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>
    <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>


   
